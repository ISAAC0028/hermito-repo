<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.hermitoassistent" name="Hermito Assistent" version="1.0.0" provider-name="Hermito">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Hermito Assistent</summary>
    <description lang="en">Hermito Assistent um Kodi neu einzurichten.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.hermito" name="Hermito's Kodi Addons" version="1.0.2" provider-name="Hermito">
	<extension point="xbmc.addon.repository" name="Hermito's Kodi Addon Repository">
		<info compressed="false">https://github.com/hermti/hermito-repo/raw/master/addons.xml</info>
		<checksum>https://github.com/hermti/hermito-repo/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/hermti/hermito-repo/raw/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Hermito's Addon Repository</summary>
		<description>Download and install Hermito's addon repository!</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.service.xbmal" version="0.4.10" name="XBMAL" provider-name="Kuroshi">
	<requires>
		<import addon="xbmc.python" version="2.1.0" />
		<import addon="script.module.simplejson" />
		<import addon="script.module.elementtree" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.python.script" library="default.py"></extension>
	<extension point="xbmc.service" library="updater.py" start="login"></extension>
	<extension point="xbmc.addon.metadata">
		<summary>MAL Updater script for XBMC by kuroshi</summary>
		<description>XBMAL is a simple updater script for MAL, based on your XBMC library. Currently it only deals with watched and plan to watch shows, and marks shows that are completely watched as complete. It still has a long way to go.</description>
		<disclaimer>This is still very experimental. Don't blame me if it messes up XBMC, MAL, or kills your cat. Really. (Released under GPLv3)</disclaimer>
	</extension>
</addon>
</addons>
